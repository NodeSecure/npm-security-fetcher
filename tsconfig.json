{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "es2020",
    "outDir": "dist",
    "lib": ["es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
  },
  "include": ["src", "bin"],
  "exclude": ["node_modules", "dist"]
}
